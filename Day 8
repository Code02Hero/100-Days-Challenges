#include <stdio.h>

int main() {
    int var = 20;     // An integer variable
    int *ptr;         // A pointer variable

    ptr = &var;       // Store address of var in pointer variable

    // Print the value of var
    printf("Value of var: %d\n", var);
    
    // Print the address of var using the pointer
    printf("Address of var: %p\n", ptr);
    
    // Print the value of var using the pointer
    printf("Value of var using pointer: %d\n", *ptr);

    // Modify the value of var using the pointer
    *ptr = 30;
    printf("Modified value of var using pointer: %d\n", var);

    return 0;
}
